{
  "name": "codereader",
  "displayName": "codereader",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codereader.createPostIt",
        "title": "PostIt: Create PostIt"
      },
      {
        "command": "codereader.createPostItWithTitle",
        "title": "PostIt: Create PostIt and set title"
      },
      {
        "command": "codereader.createPostItAtLine",
        "title": "PostIt: Create PostIt at Line"
      },
      {
        "command": "codereader.clearAllPostIts",
        "title": "PostIt: Clear All PostIts"
      },
      {
        "command": "codereader.changePostItTitle",
        "title": "Change Title"
      },
      {
        "command": "codereader.deletePostIt",
        "title": "Delete PostIt"
      },
      {
        "command": "codereader.createFolder",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.createSubFolder",
        "title": "Create Subfolder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.renameFolder",
        "title": "Rename Folder"
      },
      {
        "command": "codereader.deleteFolder",
        "title": "Delete Folder"
      },
      {
        "command": "codereader.codeCopy",
        "title": "Copy Selected Lines"
      },
      {
        "command": "codereader.quickMemoCreate",
        "title": "quickMemo: Create Memo"
      },
      {
        "command": "codereader.quickMemoCreateAndLink",
        "title": "quickMemo: Create and Link File"
      },
      {
        "command": "codereader.quickMemoOpenLatest",
        "title": "quickMemo: Open Latest Memo"
      },
      {
        "command": "codereader.deleteQuickMemo",
        "title": "Delete Memo"
      },
      {
        "command": "codereader.createQuickMemoFolder",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.createQuickMemoSubFolder",
        "title": "Create Subfolder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.renameQuickMemoFolder",
        "title": "Rename Folder"
      },
      {
        "command": "codereader.deleteQuickMemoFolder",
        "title": "Delete Folder"
      },
      {
        "command": "codereader.addDiagnosticsHint",
        "title": "CodeMarker: Add Hint"
      },
      {
        "command": "codereader.addDiagnosticsInfo",
        "title": "CodeMarker: Add Info"
      },
      {
        "command": "codereader.addDiagnosticsWarning",
        "title": "CodeMarker: Add Warning"
      },
      {
        "command": "codereader.addDiagnosticsError",
        "title": "CodeMarker: Add Error"
      },
      {
        "command": "codereader.clearAllDiagnostics",
        "title": "CodeMarker: Clear All Diagnostics"
      },
      {
        "command": "codereader.createCodeMarkerFolder",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.createCodeMarkerSubFolder",
        "title": "Create Subfolder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.renameCodeMarkerFolder",
        "title": "Rename Folder"
      },
      {
        "command": "codereader.deleteCodeMarkerFolder",
        "title": "Delete Folder"
      },
      {
        "command": "codereader.deleteCodeMarkerDiagnostics",
        "title": "Delete Diagnostics"
      },
      {
        "command": "codereader.openDiagnosticsLocation",
        "title": "Open Location"
      },
      {
        "command": "codereader.addLineHighlight",
        "title": "CodeMarker: Highlight Lines"
      },
      {
        "command": "codereader.deleteCodeMarkerLineHighlight",
        "title": "Delete Line Highlight"
      },
      {
        "command": "codereader.openLineHighlightLocation",
        "title": "Open Location"
      },
      {
        "command": "codereader.addSyntaxHighlight",
        "title": "CodeMarker: Greyout Lines"
      },
      {
        "command": "codereader.deleteCodeMarkerSyntaxHighlight",
        "title": "Delete Syntax Highlight"
      },
      {
        "command": "codereader.openSyntaxHighlightLocation",
        "title": "Open Location"
      },
      {
        "command": "codereader.toggleSyntaxHighlightUp",
        "title": "CodeMarker: Toggle Line and Move Up"
      },
      {
        "command": "codereader.toggleSyntaxHighlightDown",
        "title": "CodeMarker: Toggle Line and Move Down"
      },
      {
        "command": "codereader.readTracker.toggleReadMark",
        "title": "ReadTracker: Toggle Read Mark",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.markSelection",
        "title": "ReadTracker: Mark Selection as Read",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.unmarkSelection",
        "title": "ReadTracker: Unmark Selection",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.clearFile",
        "title": "ReadTracker: Clear Read Marks in File",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.showStats",
        "title": "ReadTracker: Show Stats",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.clearAll",
        "title": "ReadTracker: Clear All Records",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.toggleReadMarkUp",
        "title": "ReadTracker: Toggle Read Mark and Move Up",
        "category": "CodeReader"
      },
      {
        "command": "codereader.readTracker.toggleReadMarkDown",
        "title": "ReadTracker: Toggle Read Mark and Move Down",
        "category": "CodeReader"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "codereader.menu",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ],
      "editor/lineNumber/context": [
        {
          "submenu": "codereader.menu",
          "group": "1_modification"
        }
      ],
      "codereader.menu": [
        {
          "command": "codereader.createPostIt",
          "group": "postit@1",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.createPostItWithTitle",
          "group": "postit@2",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.createPostItAtLine",
          "group": "postit@3"
        },
        {
          "command": "codereader.clearAllPostIts",
          "group": "postit@4"
        },
        {
          "command": "codereader.codeCopy",
          "group": "codecopy@1",
          "when": "editorHasSelection"
        },
        {
          "command": "codereader.quickMemoCreate",
          "group": "quickmemo@1",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.quickMemoCreateAndLink",
          "group": "quickmemo@2",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.quickMemoOpenLatest",
          "group": "quickmemo@3",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.addDiagnosticsHint",
          "group": "codemarker@1",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.addDiagnosticsInfo",
          "group": "codemarker@2",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.addDiagnosticsWarning",
          "group": "codemarker@3",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.addDiagnosticsError",
          "group": "codemarker@4",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.clearAllDiagnostics",
          "group": "codemarker@5"
        },
        {
          "command": "codereader.addLineHighlight",
          "group": "codemarker@6",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.addSyntaxHighlight",
          "group": "codemarker@7",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.readTracker.toggleReadMark",
          "group": "readtracker@1",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.readTracker.markSelection",
          "group": "readtracker@2",
          "when": "editorHasSelection"
        },
        {
          "command": "codereader.readTracker.unmarkSelection",
          "group": "readtracker@3",
          "when": "editorHasSelection"
        }
      ],
      "view/item/context": [
        {
          "command": "codereader.changePostItTitle",
          "when": "view == codeReaderPostIt && viewItem == postItNote",
          "group": "postit@1"
        },
        {
          "command": "codereader.deletePostIt",
          "when": "view == codeReaderPostIt && viewItem == postItNote",
          "group": "postit@2"
        },
        {
          "command": "codereader.createSubFolder",
          "when": "view == codeReaderPostIt && viewItem == postItFolder",
          "group": "folder@1"
        },
        {
          "command": "codereader.renameFolder",
          "when": "view == codeReaderPostIt && viewItem == postItFolder",
          "group": "folder@2"
        },
        {
          "command": "codereader.deleteFolder",
          "when": "view == codeReaderPostIt && viewItem == postItFolder",
          "group": "folder@3"
        },
        {
          "command": "codereader.deleteQuickMemo",
          "when": "view == codeReaderQuickMemo && viewItem == quickMemoNote",
          "group": "quickmemo@1"
        },
        {
          "command": "codereader.createQuickMemoSubFolder",
          "when": "view == codeReaderQuickMemo && viewItem == quickMemoFolder",
          "group": "folder@1"
        },
        {
          "command": "codereader.renameQuickMemoFolder",
          "when": "view == codeReaderQuickMemo && viewItem == quickMemoFolder",
          "group": "folder@2"
        },
        {
          "command": "codereader.deleteQuickMemoFolder",
          "when": "view == codeReaderQuickMemo && viewItem == quickMemoFolder",
          "group": "folder@3"
        },
        {
          "command": "codereader.createCodeMarkerSubFolder",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerFolder",
          "group": "folder@1"
        },
        {
          "command": "codereader.renameCodeMarkerFolder",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerFolder",
          "group": "folder@2"
        },
        {
          "command": "codereader.deleteCodeMarkerFolder",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerFolder",
          "group": "folder@3"
        },
        {
          "command": "codereader.deleteCodeMarkerDiagnostics",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerDiagnostics",
          "group": "diagnostics@1"
        },
        {
          "command": "codereader.deleteCodeMarkerLineHighlight",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerLineHighlight",
          "group": "lineHighlight@1"
        },
        {
          "command": "codereader.deleteCodeMarkerSyntaxHighlight",
          "when": "view == codeReaderCodeMarker && viewItem == codeMarkerSyntaxHighlight",
          "group": "syntaxHighlight@1"
        }
      ],
      "view/title": [
        {
          "command": "codereader.createFolder",
          "when": "view == codeReaderPostIt",
          "group": "navigation@2"
        },
        {
          "command": "codereader.createCodeMarkerFolder",
          "when": "view == codeReaderCodeMarker",
          "group": "navigation@2"
        },
        {
          "command": "codereader.createQuickMemoFolder",
          "when": "view == codeReaderQuickMemo",
          "group": "navigation@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "codereader.menu",
        "label": "CodeReader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codereader-sidebar",
          "title": "Code Reader",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codereader-sidebar": [
        {
          "id": "codeReaderPostIt",
          "name": "Post It",
          "canSelectMany": false,
          "dragAndDrop": true
        },
        {
          "id": "codeReaderQuickMemo",
          "name": "Quick Memo",
          "canSelectMany": false
        },
        {
          "id": "codeReaderCodeMarker",
          "name": "Code Marker",
          "canSelectMany": false,
          "dragAndDrop": true
        }
      ]
    },
    "codeLens": [
      {
        "language": "*",
        "command": "codereader.postItCodeLens"
      }
    ],
    "configuration": {
      "title": "CodeReader",
      "properties": {
        "codereader.storageLocation": {
          "type": "string",
          "enum": [
            "workspace",
            "extension"
          ],
          "default": "workspace",
          "enumDescriptions": [
            "Store in workspace root .codereader folder (recommended for version control)",
            "Store in VS Code extension storage"
          ],
          "description": "Choose where to store CodeReader data files"
        },
        "codereader.codeCopy.format": {
          "type": "string",
          "default": "`{filepath}` {startLine}行目～{endLine}行目\\n```{codetype}\\n{code}\\n```",
          "description": "Format template for copying selected lines. Use {filepath}, {startLine}, {endLine}, {code}, {codetype} as placeholders. Use \\n for line breaks."
        },
        "codereader.readTracker.weekStartsOnMonday": {
          "type": "boolean",
          "default": true,
          "description": "Set the week start day to Monday (false for Sunday)"
        },
        "codereader.readTracker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show read tracker statistics in the status bar"
        },
        "codereader.readTracker.mergeWindowMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "description": "Time window in minutes for merging adjacent/overlapping read ranges. Set to 0 to disable merging."
        },
        "codereader.readTracker.syncToLineHighlight": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync read marks to LineHighlight when marking lines as read"
        }
      }
    },
    "keybindings": [
      {
        "command": "codereader.toggleSyntaxHighlightUp",
        "key": "ctrl+alt+up",
        "when": "editorTextFocus"
      },
      {
        "command": "codereader.toggleSyntaxHighlightDown",
        "key": "ctrl+alt+down",
        "when": "editorTextFocus"
      },
      {
        "command": "codereader.readTracker.toggleReadMarkUp",
        "key": "ctrl+alt+shift+up",
        "when": "editorTextFocus"
      },
      {
        "command": "codereader.readTracker.toggleReadMarkDown",
        "key": "ctrl+alt+shift+down",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
