{
  "name": "codereader",
  "displayName": "codereader",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codereader.createPostIt",
        "title": "PostIt: Create PostIt"
      },
      {
        "command": "codereader.createPostItWithTitle",
        "title": "PostIt: Create PostIt and set title"
      },
      {
        "command": "codereader.createPostItAtLine",
        "title": "PostIt: Create PostIt at Line"
      },
      {
        "command": "codereader.clearAllPostIts",
        "title": "PostIt: Clear All PostIts"
      },
      {
        "command": "codereader.changePostItTitle",
        "title": "Change Title"
      },
      {
        "command": "codereader.deletePostIt",
        "title": "Delete PostIt"
      },
      {
        "command": "codereader.createFolder",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.createSubFolder",
        "title": "Create Subfolder",
        "icon": "$(new-folder)"
      },
      {
        "command": "codereader.renameFolder",
        "title": "Rename Folder"
      },
      {
        "command": "codereader.codeCopy",
        "title": "Copy Selected Lines"
      },
      {
        "command": "codereader.quickMemoCreate",
        "title": "quickMemo: Create Memo"
      },
      {
        "command": "codereader.quickMemoCreateAndLink",
        "title": "quickMemo: Create and Link File"
      },
      {
        "command": "codereader.quickMemoOpenLatest",
        "title": "quickMemo: Open Latest Memo"
      },
      {
        "command": "codereader.deleteQuickMemo",
        "title": "Delete Memo"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "codereader.menu",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ],
      "editor/lineNumber/context": [
        {
          "submenu": "codereader.menu",
          "group": "1_modification"
        }
      ],
      "codereader.menu": [
        {
          "command": "codereader.createPostIt",
          "group": "postit@1",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.createPostItWithTitle",
          "group": "postit@2",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "codereader.createPostItAtLine",
          "group": "postit@3"
        },
        {
          "command": "codereader.clearAllPostIts",
          "group": "postit@4"
        },
        {
          "command": "codereader.codeCopy",
          "group": "codecopy@1",
          "when": "editorHasSelection"
        },
        {
          "command": "codereader.quickMemoCreate",
          "group": "quickmemo@1",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.quickMemoCreateAndLink",
          "group": "quickmemo@2",
          "when": "editorTextFocus"
        },
        {
          "command": "codereader.quickMemoOpenLatest",
          "group": "quickmemo@3",
          "when": "editorTextFocus"
        }
      ],
      "view/item/context": [
        {
          "command": "codereader.changePostItTitle",
          "when": "view == codeReaderPostIt && viewItem == postItNote",
          "group": "postit@1"
        },
        {
          "command": "codereader.deletePostIt",
          "when": "view == codeReaderPostIt && viewItem == postItNote",
          "group": "postit@2"
        },
        {
          "command": "codereader.createSubFolder",
          "when": "view == codeReaderPostIt && viewItem == postItFolder",
          "group": "folder@1"
        },
        {
          "command": "codereader.renameFolder",
          "when": "view == codeReaderPostIt && viewItem == postItFolder",
          "group": "folder@2"
        },
        {
          "command": "codereader.deleteQuickMemo",
          "when": "view == codeReaderQuickMemo && viewItem == quickMemoNote",
          "group": "quickmemo@1"
        }
      ],
      "view/title": [
        {
          "command": "codereader.createFolder",
          "when": "view == codeReaderPostIt",
          "group": "navigation@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "codereader.menu",
        "label": "CodeReader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codereader-sidebar",
          "title": "Code Reader",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codereader-sidebar": [
        {
          "id": "codeReaderPostIt",
          "name": "Post It",
          "canSelectMany": false,
          "dragAndDrop": true
        },
        {
          "id": "codeReaderQuickMemo",
          "name": "Quick Memo",
          "canSelectMany": false
        },
        {
          "id": "codeReaderChat",
          "name": "チャット"
        }
      ]
    },
    "codeLens": [
      {
        "language": "*",
        "command": "codereader.postItCodeLens"
      }
    ],
    "configuration": {
      "title": "CodeReader",
      "properties": {
        "codereader.codeCopy.format": {
          "type": "string",
          "default": "`{filepath}` {startLine}行目～{endLine}行目\\n```\\n{code}\\n```",
          "description": "Format template for copying selected lines. Use {filepath}, {startLine}, {endLine}, {code} as placeholders. Use \\n for line breaks."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
